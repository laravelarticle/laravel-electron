MIBDEPS = Makefile.mib mibfetch smistrip

all:	$(MIBS)

allmibs:	ianamibs rfcmibs

rfc:	allmibs
	rm -fr $(INSTDIR)
	mkdir $(INSTDIR)
	cp $(ALLDIR)/* $(INSTDIR)
	if test `uname` = SunOS ; \
	then gpatch -d $(INSTDIR) < rfcmibs.diff; \
	else patch -d $(INSTDIR) < rfcmibs.diff; \
	fi
	rm -f $(INSTDIR)/*orig

clean:
	rm $(MIBS)

